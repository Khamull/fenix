<%
'DATA --- CONVERSÃO

DIM DATA
DIM DIA
DIM MES
DIM ANO

DIA = DAY(DATE)
MES = MONTH(DATE)
ANO = YEAR(DATE)

IF (DIA < 10) THEN
DIA = "0"&DIA
END IF

IF (MES < 10) THEN
MES = "0"&MES
END IF

DATA = ANO&"-"&MES&"-"&DIA

DIM HORA
DIM MINUTO
DIM SEGUNDO

HORA = HOUR(TIME)
MINUTO = MINUTE(TIME)
SEGUNDO = SECOND(TIME)

IF (HORA < 10) THEN
HORA = "0"&HORA
END IF

IF (MINUTO < 10) THEN
MINUTO = "0"&MINUTO
END IF

IF (SEGUNDO < 10) THEN
SEGUNDO = "0"&SEGUNDO
END IF

DIM HORARIO
HORARIO = HORA&":"&MINUTO&":"&SEGUNDO

DIM CODIGO
CODIGO = HORARIO&DATA

CODIGO = REPLACE(CODIGO,"-","")
CODIGO = REPLACE(CODIGO,"/","")
CODIGO = REPLACE(CODIGO,":","")
%>